# i3 config file (v4)

# use logo key
set $mod Mod4

# font
font pango:DejaVu Sans Mono 8

# gaps
gaps inner 10

# border
new_window pixel

# terminal
bindsym $mod+Return exec xfce4-terminal

# firefox
bindsym $mod+shift+f exec firefox-esr
#bindsym $mod+shift+f exec firejail --seccomp --nonewprivs --private-tmp firefox-esr

# wallpaper
exec --no-startup-id "feh --bg-fill ~/.local/share/backgrounds/fedora.png"

# lockscreen wallpaper
bindsym $mod+l exec --no-startup-id "i3lock -i ~/.local/share/backgrounds/fedora-lockscreen.png -p default|win -f"

# menu
bindsym $mod+a exec "rofi -show drun -modi drun,run -location 1 -width 100 -lines 17 -line-margin 0 -line-padding 1 -separator-style none -font 'roboto mono nerd font mono light 10' -columns 4 -bw 0 -theme solarized -icon-theme 'Papirus' -show-icons"

# exit
bindsym $mod+x exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# force exit
bindsym $mod+Shift+x exit

# network manager
exec --no-startup-id nm-applet

# transparent
exec --no-startup-id compton

# mouse over activates window
floating_modifier $mod

# kill focused window
bindsym $mod+q kill

# fullscreen
bindsym $mod+f fullscreen toggle

# reload config
bindsym $mod+Shift+c reload

# restart i3
bindsym $mod+Shift+r restart

# focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# sticky move
mode "move" {
        bindsym Left move left
        bindsym Down move down
        bindsym Up move up
        bindsym Right move right

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+m "default"
}

bindsym $mod+m mode "move"

# split
mode "split"{
        bindsym Right split h mode "default"
        bindsym Down split v mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+s mode "default"
}

bindsym $mod+s mode "split"

# workspaces
mode "workspace" {
        bindsym 1 workspace I
        bindsym 2 workspace II
        bindsym 3 workspace III
        bindsym 4 workspace IV
        bindsym 5 workspace V
        bindsym 6 workspace VI
        bindsym 7 workspace VII
        bindsym 8 workspace VIII
        bindsym 9 workspace IX
        bindsym 0 workspace X

        bindsym $mod+1 move container to workspace I
        bindsym $mod+2 move container to workspace II
        bindsym $mod+3 move container to workspace III
        bindsym $mod+4 move container to workspace IV
        bindsym $mod+5 move container to workspace V
        bindsym $mod+6 move container to workspace VI
        bindsym $mod+7 move container to workspace VII
        bindsym $mod+8 move container to workspace VIII
        bindsym $mod+9 move container to workspace IX
        bindsym $mod+0 move container to workspace X

        bindsym Left workspace prev
        bindsym Right workspace next

        bindsym Up mode "default"
        bindsym Down mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+w mode "default"
        bindsym $mod+q mode "default"
}

bindsym $mod+w mode "workspace"

# resize
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# status bar
bar {
         status_command while sh "~/.config/i3/i3_status.sh"; do sleep 1; done
}

# keyboard layout
exec --no-startup-id setxkbmap -layout de -option grp:alt_shift_toggle
